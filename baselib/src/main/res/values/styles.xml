<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 配置qmui提供的theme -->
        <item name="qmui_config_color_blue">@color/colorPrimary</item>
        <item name="QMUITopBarStyle">@style/QDTopBar</item>
    </style>
    <!--**********************************************
            *             qmui topbar style              *
            ***********************************************-->
    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_separator_height">0px</item>
        <item name="qmui_topbar_title_color">@color/white</item>
        <item name="qmui_topbar_bg_color">@color/colorPrimary</item>
        <item name="qmui_topbar_left_back_drawable_id">@drawable/ic_left</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/white</item>
    </style>
    <!--查看大图页面，全屏显示-->
    <style name="ViewBigPicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/default_animation_up</item>
    </style>

    <!--打开图片详情时有动画-->
    <style name="default_animation_up" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>
    </style>
</resources>
